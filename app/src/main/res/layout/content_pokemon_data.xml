<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_pokemon_data"
        tools:context=".PokemonDataActivity">

    <TextView
            android:text="@string/height_title"
            android:layout_width="166dp"
            android:layout_height="66dp"
            android:id="@+id/height_title" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weight_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textStyle="bold" android:textAlignment="center"
            android:gravity="center" android:textSize="@dimen/title_text_size"/>
    <TextView
            android:layout_width="181dp"
            android:layout_height="68dp"
            android:id="@+id/pokemon_height" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_weight"
            app:layout_constraintStart_toEndOf="@+id/height_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textAlignment="center"
            android:gravity="center" android:textSize="18sp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.375"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/info_title"
            android:id="@+id/pokemon_name_title" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/weight_title"
            android:layout_width="166dp"
            android:layout_height="66dp"
            android:id="@+id/weight_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_name_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold" android:textAlignment="center"
            android:gravity="center" android:textSize="@dimen/title_text_size"/>
    <TextView
            android:layout_width="181dp"
            android:layout_height="68dp"
            android:id="@+id/pokemon_weight" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_name_title"
            app:layout_constraintStart_toEndOf="@+id/weight_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textAlignment="center"
            android:gravity="center" android:textSize="18sp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/types_title"
            android:layout_width="166dp"
            android:layout_height="66dp"
            android:id="@+id/pokemon_type_title" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/height_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="center" android:gravity="center"
            android:textStyle="bold" android:textSize="@dimen/title_text_size"/>
    <TextView
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:id="@+id/pokemon_types_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_height" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/pokemon_type_title"
            android:layout_marginStart="8dp" android:textAlignment="center" android:gravity="center"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="45dp" android:id="@+id/guideline"
            android:visibility="visible"/>
    <!--<ListView-->
            <!--android:layout_width="181dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/type_list_view"-->
            <!--app:layout_constraintStart_toEndOf="@+id/pokemon_type_title" android:layout_marginStart="8dp"-->
            <!--android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/pokemon_height"-->
            <!--app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"-->
            <!--app:layout_constraintHorizontal_bias="0.375"/>-->

</android.support.constraint.ConstraintLayout>